<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>BorrowingController</servlet-name>
        <servlet-class>ict.servlet.BorrowingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BorrowingController</servlet-name>
        <url-pattern>/borrowFruit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FruitController</servlet-name>
        <servlet-class>ict.servlet.FruitController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListFruitsController</servlet-name>
        <servlet-class>ict.servlet.ListFruitsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FruitController</servlet-name>
        <url-pattern>/manageFruits</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateFruitController</servlet-name>
        <servlet-class>ict.servlet.UpdateFruitController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFruitController</servlet-name>
        <url-pattern>/updateFruit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFruitController</servlet-name>
        <servlet-class>ict.servlet.DeleteFruitController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFruitController</servlet-name>
        <url-pattern>/deleteFruit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReservationController</servlet-name>
        <servlet-class>ict.servlet.ReservationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationController</servlet-name>
        <url-pattern>/reserveFruit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListFruitsController</servlet-name>
        <url-pattern>/listFruits</url-pattern> 
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ListReservationsController</servlet-name>
        <servlet-class>ict.servlet.ListReservationsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListReservationsController</servlet-name>
        <url-pattern>/listReservations</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdateInventoryController</servlet-name>
        <servlet-class>ict.servlet.UpdateInventoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateInventoryController</servlet-name>
        <url-pattern>/updateInventory</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdateWarehouseInventoryController</servlet-name>
        <servlet-class>ict.servlet.UpdateWarehouseInventoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateWarehouseInventoryController</servlet-name>
        <url-pattern>/updateWarehouseInventory</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>NeedsApprovalController</servlet-name>
        <servlet-class>ict.servlet.NeedsApprovalController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NeedsApprovalController</servlet-name>
        <url-pattern>/needsApproval</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ArrangeDeliveryController</servlet-name>
        <servlet-class>ict.servlet.ArrangeDeliveryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArrangeDeliveryController</servlet-name>
        <url-pattern>/arrangeDelivery</url-pattern>
    </servlet-mapping>
    
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/aib_db</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value/>
    </context-param>
</web-app>
